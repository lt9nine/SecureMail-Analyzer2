# Database Configuration
DATABASE_URL=sqlite:///./securemail.db
# For PostgreSQL: postgresql://user:password@localhost/securemail

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# AI Provider Configuration
AI_PROVIDER=openrouter
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OLLAMA_BASE_URL=http://localhost:11434

# VirusTotal Configuration
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here
VIRUSTOTAL_BASE_URL=https://www.virustotal.com/vtapi/v2

# Mail Sync Configuration
MAIL_SYNC_INTERVAL_MINUTES=5
MAX_ATTACHMENT_SIZE_MB=10

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Application
APP_NAME=SecureMail Analyzer
VERSION=0.1.0
DEBUG=True 